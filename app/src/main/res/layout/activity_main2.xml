<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    
    <TextView
        android:id="@+id/TodayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48sp"/>
    <ImageButton
        android:id="@+id/ReturnHomeButton"
        android:layout_width="30dp"
        android:layout_height="30sp"
        android:src="@drawable/leftarrow"
        android:background="@drawable/bluebutton"
        app:layout_constraintTop_toTopOf="@id/TodayText"
        app:layout_constraintBottom_toBottomOf="@id/TodayText"
        android:layout_marginStart="16sp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/RestTimerContainer"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="32sp"
        app:layout_constraintTop_toBottomOf="@id/TodayText"
        app:cardCornerRadius="16sp"
        app:cardBackgroundColor="@color/blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rest Time"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16sp">
        </TextView>
        <TextView
            android:id="@+id/Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48sp">
        </TextView>
        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100sp">
            <ImageButton
                android:id="@+id/DecreaseTimerButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Decrease"
                android:src="@drawable/minus"
                android:background="@drawable/bluebutton"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/IncreaseTimerButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Increase"
                android:src="@drawable/add"
                android:background="@drawable/bluebutton"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/SetContainer"
        android:layout_width="match_parent"
        android:layout_height="275sp"
        app:layout_constraintTop_toBottomOf="@id/RestTimerContainer"
        app:cardBackgroundColor="#f3f4f5"
        android:layout_marginHorizontal="16sp"
        app:cardCornerRadius="16sp"
        android:layout_marginTop="32sp">
        <TextView
            android:id="@+id/ExerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24sp"
            android:layout_marginStart="24sp"/>
        <TextView
            android:id="@+id/HighestRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest Record: "
            android:textSize="12sp"
            android:layout_marginTop="56sp"
            android:layout_marginStart="24sp"
            android:textColor="@color/grey"/>
        <TextView
            android:id="@+id/SetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="28sp"
            android:layout_marginStart="300sp"
            android:textColor="@color/grey"/>
        <LinearLayout
            android:id="@+id/SetDataContainer"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="88sp"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:id="@+id/WeightDecreaseButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/minus"
                android:background="@drawable/greybutton_bg"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="28sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/WeightDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="30sp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/WeightIncreaseButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add"
                android:background="@drawable/greybutton_bg"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/RepsDecreaseButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/minus"
                android:background="@drawable/greybutton_bg"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="28sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reps"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/RepsDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="30sp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/RepsIncreaseButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add"
                android:background="@drawable/greybutton_bg"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6sp"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/SetConfirmButton"
            android:layout_width="275dp"
            android:layout_height="70dp"
            android:text="Compelete Set"
            android:textSize="20sp"
            android:backgroundTint="@color/blue"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180sp"
            app:cornerRadius="10sp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/CompeletedSetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SetContainer"
        android:layout_marginTop="32sp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Previous Sets"
        android:layout_marginStart="16sp"
        android:textSize="18sp"
        android:textColor="@color/grey">
    </TextView>
    <TableLayout
        android:id="@+id/CompletedSetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        app:layout_constraintTop_toBottomOf="@id/CompeletedSetText"
        android:layout_marginTop="24sp"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_height="18dp">
            <TextView
                android:id="@+id/Set1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/Set1Load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/Set1Tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:gravity="end"
                android:textColor="@color/grey"/>
        </TableRow>
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <TableRow
            android:layout_height="18dp">
            <TextView
                android:id="@+id/Set2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/Set2Load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nothing Here Yet"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/Set2Tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:gravity="end"
                android:textColor="@color/grey"/>
        </TableRow>
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <TableRow
            android:layout_height="18dp">
            <TextView
                android:id="@+id/Set3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/Set3Load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/Set3Tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:gravity="end"
                android:textColor="@color/grey"/>
        </TableRow>

    </TableLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CompletedSetContainer"
        android:layout_marginTop="24sp"
        android:layout_marginHorizontal="16sp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/SaveExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:text="Save This Workout"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/NextExerciseButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:cornerRadius="10sp"
            android:backgroundTint="@color/blue"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/NextExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:text="Scan Next Exercise"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/SaveExerciseButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="10sp"
            android:backgroundTint="@color/blue"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


        
    
</androidx.constraintlayout.widget.ConstraintLayout>