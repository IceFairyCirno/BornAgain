<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubMachines"
    android:padding="15sp">
    <TextView
        android:id="@+id/ChooseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Choose the Machine"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="48sp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerInParent="true"
        android:columnCount="2"
        android:rowCount="2">
        <androidx.cardview.widget.CardView
            android:layout_margin="10sp"
            app:cardCornerRadius="15sp">
            <ImageButton
                android:id="@+id/ArmCurlBar"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:src="@drawable/armcurlbar"
                android:padding="0sp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@id/ChooseText"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Arm Curl Bar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="190sp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="10sp"
            app:cardCornerRadius="15sp">
            <ImageButton
                android:id="@+id/PullDown"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:src="@drawable/pulldown"
                android:padding="0sp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="@id/ArmCurlBar"
                app:layout_constraintStart_toEndOf="@id/ArmCurlBar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Pull Down"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="190sp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="10sp"
            app:cardCornerRadius="15sp">
            <ImageButton
                android:id="@+id/PushDown"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:src="@drawable/pushdown"
                android:padding="0sp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@id/ArmCurlBar"
                app:layout_constraintStart_toStartOf="@id/ArmCurlBar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Push Down"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="190sp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="10sp"
            app:cardCornerRadius="15sp">
            <ImageButton
                android:id="@+id/RowWithExtensionTriangle"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:src="@drawable/rowwithbackextensiontriangle"
                android:padding="0sp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@id/ArmCurlBar"
                app:layout_constraintStart_toEndOf="@id/ArmCurlBar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Row With Extension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="190sp"/>
        </androidx.cardview.widget.CardView>
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>